<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="@color/bg_half_trans" />
            <stroke android:width="1dp" android:color="@color/bg_xiaomibackgray" />
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="@color/bg_midnight_blue" />
            <stroke android:width="1dp" android:color="@color/bg_white" />
        </shape>
    </item>
</selector>