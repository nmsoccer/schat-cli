<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bg_midnight_blue" >

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tv_normal_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请确认"
            android:textColor="@color/bg_white"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@color/bg_white"
            android:layout_below="@id/tv_normal_dialog_title"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="确认"
                android:textSize="12sp"
                android:textColor="@color/bg_white"
                android:background="@drawable/select_white_stroke_gray"
                android:id="@+id/bt_normal_dialog_ok"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="MI"
                android:textSize="12sp"
                android:visibility="gone"
                android:textColor="@color/bg_white"
                android:background="@drawable/select_white_stroke_gray"
                android:id="@+id/bt_normal_dialog_mid"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="取消"
                android:textSize="12sp"
                android:textColor="@color/bg_white"
                android:background="@drawable/select_white_stroke_gray"
                android:id="@+id/bt_normal_dialog_cancel"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>